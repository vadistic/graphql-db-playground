{
  "version": "2.0.0",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": false,
    "panel": "dedicated",
    "showReuseMessage": false,
    "clear": true
  },
  "problemMatcher": [],
  "tasks": [
    // sets env
    {
      "type": "shell",
      "label": "env:vm",
      "command": "sh scripts/env.vm.sh"
    },
    {
      "type": "shell",
      "label": "env:local",
      "command": "sh scripts/env.local.sh"
    },
    // docker machine
    {
      "type": "shell",
      "label": "down:vm",
      "command": "sh scripts/down.vm.sh",
      "dependsOn": "env:vm"
    },
    {
      "type": "shell",
      "label": "up:vm",
      "command": "sh scripts/down.vm.sh"
    },
    // psql drop
    {
      "type": "shell",
      "label": "drop:local",
      "command": "sh scripts/drop.sh",
      "dependsOn": "env:local"
    },
    {
      "type": "shell",
      "label": "drop:vm",
      "command": "sh scripts/drop.sh",
      "dependsOn": "env:vm"
    },
    // psql load
    {
      "type": "shell",
      "label": "load:local",
      "command": "sh scripts/load.sh",
      "dependsOn": "env:local"
    },
    {
      "type": "shell",
      "label": "load:vm",
      "command": "sh scripts/load.sh"
    },
    // psql drop + load
    {
      "type": "shell",
      "label": "reset:local",
      "command": "sh scripts/reset.sh",
      "dependsOn": "env:local"
    },
    {
      "type": "shell",
      "label": "reset:vm",
      "command": "sh scripts/reset.sh"
    },
    // server start
    {
      "type": "npm",
      "script": "start:local",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "start:vm",
      "problemMatcher": []
    }
  ]
}
